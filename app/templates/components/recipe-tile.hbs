{{#if opened}}
  <div class="row">
    <span><h1 {{action 'close'}}>{{drinkName}}</h1>
    <p>({{drinkAlcoholic}})</p>
    {{#each drinkTastes as |t|}}
      <span>{{t.text}}!</span>
    {{/each}}</span>
    <p>{{drinkCategory}}</p>
    {{#if drinkOccasions}}
      <p>Perfect for the
        {{#each drinkOccasions as |oc|}}
        {{capitalizeHelper oc.id}}!
        {{/each}}
      </p>
    {{/if}}
    <div class="container">
      <h3>Instructions</h3>
      <ul>
      <li><b>Served in - {{drinkServedIn}}</b></li>
      {{#each drinkInstructions as |i|}}
        <li>{{i}}</li>
      {{/each}}
    </ul>
      <h3>Tools</h3>
      <ul>
        {{#each drinkTools as |t|}}
        <li>{{t.text}}</li>
        {{/each}}
      </ul>
    </div>
  </div>

  <h3>Ingredients</h3>
  <div class="row">
    <div class="container">
      {{#each drinkIngredients as |i|}}
        <p>{{i.textPlain}}</p>
      {{/each}}
      <iframe src="http://www.youtube.com/embed/{{drinkVideo}}" width="480" height="390" title="Drinks!" allowfullscreen frameborder="0"></iframe>
    </div>
  </div>
  {{#if killButton}}
    <button {{action 'addToCart'}} disabled>Put it on my tab!</button>
    {{else}}
      <button {{action 'addToCart'}}>Put it on my tab!</button>
  {{/if}}
{{else}}
  <h1 {{action 'open'}}>{{drinkName}}</h1>

{{/if}}
